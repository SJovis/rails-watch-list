<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://echoboomer.pt/wp-content/uploads/2020/03/cinemas-em-portugal.jpg)">
<h1 class='mb-5'>Your lists of movies</h1>
</div>
<div class="container">
  <div class="justify-content-md-end mr-2">
  <p class='btn btn-lg btn-primary mt-3 btn--add'>
     <i class="fas fa-plus mr-1"></i> List
  </p>
  </div>
  <div id="new-bookmark"  style="display:none;" class="mb-5 form--bookmark" >
    <%= render "list_form" %>
  </div>
  <div class="cards">
    <% @lists.each do |item| %>
      <%= link_to list_path(item.id) do %>
        <% if item.photo.attached? %>
            <div class='card-category' style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path item.photo.key, height: 300, width: 200, crop: :fill %>)">
              <%= item.name %>
            </div>
        <% else %>
            <div class='card-category' style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://res.cloudinary.com/dv6cge9lp/image/upload/v1637327362/production/movie-popcorn_wd2xji.jpg)">
              <%= item.name %>
            </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
